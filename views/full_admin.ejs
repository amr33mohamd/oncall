 <%- include('parts/header', {page: 'full admin'}); %>
<%- include('parts/slide_bar'); %>
<div class="container">

<!-- Table --->
<div class="col-md-10 col-sm-10 col-xs-10">
               <div class="x_panel">
                 <div class="x_title">
                   <h2>Hospitals | <small>Admins</small></h2>
                   <ul class="nav navbar-right panel_toolbox">
                     <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                     </li>
                     <li class="dropdown">
                       <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                       <ul class="dropdown-menu" role="menu">
                         <li><a href="#">Settings 1</a>
                         </li>
                         <li><a href="#">Settings 2</a>
                         </li>
                       </ul>
                     </li>
                     <li><a class="close-link"><i class="fa fa-close"></i></a>
                     </li>
                   </ul>
                   <div class="clearfix"></div>
                 </div>
                 <div class="x_content">
                   <p class="text-muted font-13 m-b-30">
                     Here you can delete or add admins for hospitals. Note : you can add more then 1 admin for the every single hospital. and you can search for admin by any of its data form the search box. You can else download all that data in PDF , CSV , EXCEL or print int directly
                   </p>
                   <table id="datatable-buttons" class="table table-striped table-bordered">
                     <thead>
                       <tr>
                         <th>Name</th>
                         <th>Email</th>
                         <th>Password</th>
                         <th>hospital Name</th>
                         <th>Hospital</th>
                         <th>Delete</th>
                       </tr>
                     </thead>


                     <tbody>

                       <% data.forEach(function(user){ %>
                         <tr>
                           <td><%= user['name']  %></td>
                           <td><%= user['email']  %></td>
                           <td><%= user['password']  %></td>
                           <td><%= user['hospital_name'] %></td>
                           <td><%= user['hospital_id']  %></td>
                           <td><a style="color:red" href="/delete_hospital_admin?id=<%= user['id'] %>">X</a></td>
                         </tr>
                      <% }); %>

                     </tbody>
                   </table>
                 </div>
               </div>
             </div>

             <div class="col-md-10 col-sm-10 col-xs-10">
                            <div class="x_panel">
                              <div class="x_title">
                                <h2>Add | <small>Hospitals Admins</small></h2>
                                <ul class="nav navbar-right panel_toolbox">

                                  <li><a class="close-link"><i class="fa fa-close"></i></a>
                                  </li>
                                </ul>
                                <div class="clearfix"></div>
                              </div>
                              <div class="x_content">


                                <form method="get" action="/add_hospital_admin" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Name <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="text" id="name" name="name" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Email <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="text" id="email" name="email" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">password</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input id="password" class="form-control col-md-7 col-xs-12" type="text" name="password">
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">hospital</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <select id="hospital" class="form-control col-md-7 col-xs-12" type="text" name="hospital">
                            <% hospitals.forEach(function(hospital){ %>
                              <option value="<%= hospital['id'] %>"><%= hospital['name'] %></option>
                           <% }); %>
                          </select>
                        </div>
                      </div>


                      <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                          <button type="submit" class="btn center-block btn-success">Submit</button>
                        </div>
                      </div>

                    </form>

                              </div>
                            </div>
                          </div>




                   </div>


</div>





<%- include('parts/footer'); %>
